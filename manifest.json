{
  "manifest_version": 2,
  "name": "Spotify Lyrics",
  "description": "This extensions provides lyrics for the current Spotify track",
  "version": "2.0",

  "content_scripts": [{
    "matches": ["https://open.spotify.com/*"],
    "js":      ["content.js"]
  }],

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html",
    "default_title": "Lyrics"
  },

  "permissions": ["activeTab"]
}